        "showSelections": {
          "description": "Indicates if the available selections number is displayed",
          "type": "boolean",
          "title": "showSelections"
        },
        "availableSelectionsLabel": {
          "description": "Label to display the number of available selections",
          "type": "string",
          "title": "availableSelectionsLabel"
        },
        "showCorrectAnswersNumber": {
          "description": "Indicates if the correct answers number is displayed",
